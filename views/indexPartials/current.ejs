<div class="row">
    <div class="span8" style="text-align:center;">
        <h1>Current Expenses</h1>
    </div>
</div>

<div class="row" style="margin-bottom:10px">

    <div class="span4" style="text-align:center;">
        <div id="expenseGraphContainer" style="height:400px;width:100%;">
        </div>

        <button class="btn btn-large btn-danger">Payout</button>
    </div>


    <div class="span4">
        <script type="text/x-handlebars">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td></td>
                    {{#each App.peopleController}}
                        <td>{{name}}</td>
                    {{/each}}
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>Paid</td>
                    {{#each App.peopleController}}
                    <td>${{paid}}</td>
                    {{/each}}
                </tr>

                <tr>
                    <td>Payout</td>
                    {{#each App.peopleController}}
                        {{#if inDebt}}
                            <td><span class="label label-important">${{absOwe}}</span></td>
                         {{else}}
                            <td><span class="label label-success">${{absOwe}}</span></td>
                        {{/if}}
                    {{/each}}
                </tr>
            </tbody>
        </table>
        </script>

        <div style="display:table;margin-right:auto;margin-left:auto;text-align:center;">
            <h3>Expenses</h3>

            <table class="table">
                <thead>
                <tr>
                    <td>
                        Date
                    </td>

                    <td>
                        Payer
                    </td>

                    <td>
                        Amount
                    </td>

                    <td>
                        Comment
                    </td>
                </tr>
                </thead>

                <tbody>
                <tr>
                    <td>
                        6/13/12
                    </td>

                    <td>
                        Aaron
                    </td>

                    <td>
                        $34.93
                    </td>

                    <td>
                        Electric bill
                    </td>
                </tr>

                <tr>
                    <td>
                        6/11/12
                    </td>

                    <td>
                        Aaron
                    </td>

                    <td>
                        $15.07
                    </td>

                    <td>
                        Gas bill
                    </td>
                </tr>

                <tr>
                    <td>
                        6/10/12
                    </td>

                    <td>
                        Barry
                    </td>

                    <td>
                        $60.00
                    </td>

                    <td>
                        Groceries
                    </td>
                </tr>

                <tr>
                    <td>
                        6/9/12
                    </td>

                    <td>
                        Andy
                    </td>

                    <td>
                        $10.00
                    </td>

                    <td>
                        Groceries
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="span8" style="text-align:center;">

        <form class="form-inline" action="">
            <select id="payer" name="payer" style="width:80px;">
                <option>Aaron</option>
                <option>Andy</option>
                <option>Barry</option>
            </select>

            <input id="amount" type="number" name="amount" min=".01" style="width:50px;" />

            <input id="comment" type="text" name="comment" placeholder="Comment" />

            <button type="submit" class="btn btn-primary">Expense</button>
        </form>
    </div>
</div>
